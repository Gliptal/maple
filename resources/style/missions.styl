@import "common\gui"

.group_content
    & div
    & p
        display       : inline-block
        vertical-align: top
    & > div
        margin: 36px 0

.press-download
    width              : 48px
    background-image   : url("../../images/icons/download.png")
    background-position: center
    background-size    : 30px
    background-repeat  : no-repeat

.group_aircraft
    height             : 240px
    padding            : 24px
    padding-left       : 411px
    text-align         : justify
    font-size          : font_size-normal
    background-position: left center
    background-size    : 387px 240px
    background-repeat  : no-repeat

.group_missions .group_package
    width      : 100%
    margin-left: 0

.group_campaign:not(:last-child)
    margin-bottom: 72px

.group_campaign-description
    padding: 24px
    & div
    & p
        font-size: font_size-normal
    & div
        height     : 48px
        width      : calc(100% - 120px)
        line-height: @height
    & p
        padding   : 12px 0
        text-align: justify

.group_package
    width              : 90%
    margin-left        : 10%
    border             : 1px solid color_main-light
    border-left        : 0
    border-right       : 0
    padding            : 12px 24px
    padding-left       : 174px
    text-align         : left
    background-position: left center
    background-size    : 150px 150px
    background-repeat  : no-repeat
    &:not(:last-child)
        margin-bottom: 24px
    & press
        float: left
        &:not(:last-of-type)
            margin-right: 12px
    & div
    & p
        font-size: font_size-normal
    & div
        float      : right
        height     : 48px
        width      : calc(100% - 180px)
        line-height: @height
        text-align : center
    & p
        width     : 100%
        padding   : 12px 0
        text-align: justify
        &.group_package-file
            display   : block
            padding   : 0
            font-size : font_size-small
            text-align: right