@import "common\gui"

sidebar
    position        : absolute
    top             : 144px
    left            : 0
    height          : 100%
    width           : 15%
    background-color: color_main-light
    overflow-y      : overlay
    &.sticked
        position: fixed
        top     : 48px

.sidebar_section
    &:not(:last-child)
        border-bottom: 1px solid color_main-dark
    & div
    & press
        width: 100%
        &.selected
            background-color: color_accent-dark
            &:hover
                background-color: color_accent-light

.sidebar_section-type
    height        : 36px
    line-height   : @height
    font-size     : font_size-normal
    font-weight   : font_weight-medium
    text-transform: uppercase
    text-align    : center

.sidebar_section-aircraft
    height          : 24px
    line-height     : @height
    font-size       : font_size-small
    font-weight     : font_weight-light
    background-color: inherit

group
    width      : 85%
    margin-left: 15%

.group_content
    & div
    & p
        display       : inline-block
        vertical-align: top
    & > div
        margin: 36px 0

.press_buy
.press_download
    background-size    : 30px
    background-repeat  : no-repeat

.press_buy
    padding-left       : 48px
    background-image   : url("../../images/icons/buy.png")
    background-position: 9px center

.press_download
    width              : 48px
    background-image   : url("../../images/icons/download.png")
    background-position: center

.group_aircraft
    padding            : 24px
    padding-left       : 411px
    text-align         : justify
    font-size          : font_size-normal
    background-position: left center
    background-size    : 387px 240px
    background-repeat  : no-repeat

.group_missions .group_package
    width      : 100%
    margin-left: 0

.group_campaign:not(:last-child)
    margin-bottom: 72px

.group_campaign-description
    padding: 24px
    & div
    & p
        font-size: font_size-normal
    & div
        height     : 48px
        width      : calc(100% - 120px)
        line-height: @height
    & p
        padding   : 12px 0
        text-align: justify

.group_package
    width              : 90%
    margin-left        : 10%
    border             : 1px solid color_main-light
    border-left        : 0
    border-right       : 0
    padding            : 12px 24px
    padding-left       : 174px
    text-align         : left
    background-position: left center
    background-size    : 150px 150px
    background-repeat  : no-repeat
    &:not(:last-child)
        margin-bottom: 24px
    & press
        float: left
        &:not(:last-of-type)
            margin-right: 12px
    & div
    & p
        font-size: font_size-normal
    & div
        float      : right
        height     : 48px
        width      : calc(100% - 180px)
        line-height: @height
        text-align : center
    & p
        width     : 100%
        padding   : 12px 0
        text-align: justify
        &.group_package-file
            display   : block
            padding   : 0
            font-size : font_size-small
            text-align: right