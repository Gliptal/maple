@import "common\gui"

.faq_entry
    margin : 0 10%
    padding: 36px 0
    &:not(:last-child)
        border-bottom: 1px solid color_main-light
    & p
        line-height: 24px
        font-size  : font_size-normal
        text-align : justify

.faq_question
    padding-bottom: 12px
    color         : font_color-medium
    cursor        : pointer

.faq_answer
    max-height: 150px
    overflow  : hidden
    transition: max-height time_fast
    &.faq_answer-closed
        max-height : 0