@import "common\gui"

.faq_entry
    margin : 0 10%
    padding: 12px 0
    &:not(:last-child)
        border-bottom: 1px solid color_main-light
    & p
        line-height: 24px
        font-size  : font_size-normal
        text-align : justify

.faq_question
    padding   : 12px 0
    color     : font_color-medium
    cursor    : pointer
    transition: padding time_fast
    &:hover
        padding-left: 12px

.faq_answer
    max-height: 150px
    overflow  : hidden
    transition: max-height time_fast
    &.faq_answer-closed
        max-height: 0